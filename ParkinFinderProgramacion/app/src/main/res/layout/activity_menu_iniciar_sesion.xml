<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context="com.cricumcar.parkinfinderprogramacion.MenuIniciarSesion">

    <LinearLayout
        android:layout_width="344dp"
        android:layout_height="543dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="match_parent"
            android:layout_weight="0.20"
            android:layout_height="0dp"
            app:srcCompat="@mipmap/ic_launcher" />

        <EditText
            android:id="@+id/usuarioIS"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.10"
            android:ems="10"
            android:hint="Ingrese el usuario"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/contrasenaIS"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.10"
            android:ems="10"
            android:hint="Ingrese la contraseña"
            android:inputType="textPassword" />

        <Button
            android:id="@+id/iniciarSecionIS"
            android:layout_width="125dp"
            android:layout_gravity="center"
            android:textColor="@color/fondo"
            android:layout_weight="0.08"
            android:background="@color/colorPrimaryDark"
            android:layout_margin="15dp"
            android:layout_height="0dp"
            android:text="INICIAR SESION" />

        <Button
            android:id="@+id/sinCuencaIS"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:layout_weight="0.20"
            android:background="@color/colorPrimary"
            android:text="¿Aun no tienes una Cuenta?"
            android:textAppearance="?android:textAppearanceLarge"
            android:textColor="@color/fondo" />
    </LinearLayout>
</android.support.constraint.ConstraintLayout>
