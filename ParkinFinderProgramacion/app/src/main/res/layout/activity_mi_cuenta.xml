<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fondo"
    tools:context="com.cricumcar.parkinfinderprogramacion.MiCuenta">


    <LinearLayout
        android:layout_width="344dp"
        android:layout_height="543dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_margin="5dp"
            android:gravity="center"
            android:text="Es Importante que cambies de contraseña de vez en cuando, porfavor completa todos los campos y presiona Cambiar, si deceas modificar tu contraseña."/>

        <EditText
            android:id="@+id/contAntMC"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="5dp"
            android:layout_weight="0.5"
            android:ems="10"
            android:hint="Contraseña Anterior"
            android:inputType="textPassword" />

        <EditText
            android:id="@+id/contNueMC"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="5dp"
            android:layout_weight="0.5"
            android:ems="10"
            android:hint="Nueva Contraseña"
            android:inputType="textPassword" />

        <EditText
            android:id="@+id/confConMC"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="5dp"
            android:layout_weight="0.5"
            android:ems="10"
            android:hint="Confirmar Contrañase"
            android:inputType="textPassword" />

        <Button
            android:id="@+id/guardarMC"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:layout_weight="0.8"
            android:text="Cambiar Contraseña" />

        <Button
            android:id="@+id/regresarMC"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="0.8"
            android:layout_gravity="center"
            android:text="SALIR SIN REALIZAR CAMBIOS" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Si deceas Eliminar Tu cuenta por algun motivo, te presentamos esta opcion, en caso de requerirla debes completar el campo CONTRASEÑA ANTERIOR y presionar ELIMINAR CUENTA" />

        <Button
            android:id="@+id/eliminarMC"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:layout_weight="0.8"
            android:text="CERRAR CUENTA" />
    </LinearLayout>
</android.support.constraint.ConstraintLayout>
